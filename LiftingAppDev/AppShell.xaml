<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiftingAppDev.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LiftingAppDev"
    Shell.FlyoutBehavior="Flyout"
    Title="LiftingAppDev">


    <FlyoutItem Route="home">
        
        <!-- Title: Title of the tab button
             Route: Name of the page route
             ContentTemplate (DataTemplate): I believe this is what initialize which view model the route goes too
        -->
        
        <ShellContent Title="Home" Route="MainPageRoute" ContentTemplate="{DataTemplate local:MainPageView}"/>
        <ShellContent Title="Create New Workout" Route="TestPageRoute" ContentTemplate="{DataTemplate local:TestPageView}"/>
        
    </FlyoutItem>







</Shell>
