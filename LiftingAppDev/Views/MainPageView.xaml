                Text="+" 
                FontSize="Large"
                Command="{Binding NavigateToCreateNewWorkoutView_Click}"
                HorizontalOptions="EndAndExpand"
                Margin="-5, 20"         
                />

        </StackLayout>
    </ScrollView>

</ContentPage>
