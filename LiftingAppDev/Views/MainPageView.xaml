             x:Class="LiftingAppDev.MainPageView"
             Title="Home"> <!-- Title at top of page -->

    <ScrollView>
        <StackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="EndAndExpand">

            <Button
                WidthRequest="50"
